                        android:textStyle="bold"
                        android:textSize="32sp" />

                    <ImageButton
                        android:id="@+id/imageButtonFavorite02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
